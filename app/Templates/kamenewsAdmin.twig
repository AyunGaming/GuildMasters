{% extends 'base.twig' %}

{% block title %}Gestion des kamenews{% endblock %}


{% block body %}
	{{ parent() }}
	<section class="modals">
		<div class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center
			w-full md:inset-0 h-[calc(100%-1rem)] max-h-full" id="delete-kamenews-modal" tabindex="-1"
			 aria-hidden="true">
			<div class="relative p-4 w-full max-w-md max-h-full">
				<div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
					<div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
						<h3 class="text-lg font-semibold text-gray-900 dark:text-white">Supprimer le kamenews</h3>
						<button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900
							rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center
							dark:hover:bg-gray-600 	dark:hover:text-white" data-modal-toggle="delete-kamenews-modal"
							id="close-delete-modal"
						>
							<svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
								 viewBox="0 0 14 14">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
									  stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
							</svg>
							<span class="sr-only">Close modal</span>
						</button>
					</div>
					<div class="flex mb-4 mt-2">
						<span class="text-center font-bold text-gray-900 dark:text-white">Attention ! Le kamenews complet sera supprimé, articles compris. Si vous
							souhaitez retirer un ou plusieurs articles veuillez passer par l'édition du kamenews</span>
					</div>
					<form method="post" action="{{ url_for('delete-kamenews') }}" enctype="multipart/form-data">
						<input id="kamenewsId" name="ID" type="text" hidden="hidden">

						<div class="flex items-center justify-between p-4 md:p-5">
							<button type="submit" class="text-white bg-red-700
									hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm
									py-2.5 px-5 me-2 my-2 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none
									dark:focus:ring-red-800"
							>
								Supprimer
							</button>
							<button type="button" class="text-white bg-red-700
									hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm
									py-2.5 px-5 me-2 my-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none
									dark:focus:ring-blue-800"
									data-modal-toggle="delete-kamenews-modal"
							>
								Fermer
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>

	<section class="bg-white dark:bg-gray-900 py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
		<h1 class="text-gray-900 dark:text-white text-3xl font-bold">Gestion des kamenews</h1>

		<div class="bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-8 md:p-12 my-4">
			<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
				<table id="shown_table" class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
					<thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
					<tr>
						<th scope="col" class="px-6 py-3 text-center">
							ID
						</th>
						<th scope="col" class="px-6 py-3 text-center">
							Date
						</th>
						<th scope="col" class="px-6 py-3 text-center">
							Titre
						</th>
						<th scope="col" class="px-6 py-3 text-center">
							Actions
						</th>
					</tr>
					</thead>
					<tbody>
					{% for k in kamenews %}
						<tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
							<td class="text-center">{{ k.getId() }}</td>
							<td class="text-center">{{ k.getDate()|date('m/d/Y') }}</td>
							<td class="text-center">{{ k.getTitle() }}</td>
							<td class="flex justify-center">
								<button id="{{ k.getId() }}" type="button" class="read-kamenews text-white bg-blue-700
									hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm
									px-2 py-1 me-2 my-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none
									dark:focus:ring-blue-800">
										<svg class="text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
											<path fill-rule="evenodd" d="M4.998 7.78C6.729 6.345 9.198 5 12 5c2.802 0 5.27 1.345 7.002 2.78a12.713 12.713 0 0 1 2.096 2.183c.253.344.465.682.618.997.14.286.284.658.284 1.04s-.145.754-.284 1.04a6.6 6.6 0 0 1-.618.997 12.712 12.712 0 0 1-2.096 2.183C17.271 17.655 14.802 19 12 19c-2.802 0-5.27-1.345-7.002-2.78a12.712 12.712 0 0 1-2.096-2.183 6.6 6.6 0 0 1-.618-.997C2.144 12.754 2 12.382 2 12s.145-.754.284-1.04c.153-.315.365-.653.618-.997A12.714 12.714 0 0 1 4.998 7.78ZM12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" clip-rule="evenodd"/>
										</svg>
								</button>
								<button id="{{ k.getId() }}-edit" type="button" class="edit-kamenews text-white bg-yellow-400
									hover:bg-yellow-300 focus:ring-4 focus:ring-yellow-600 font-medium rounded-lg text-sm
									px-2 py-1 me-2 my-2 dark:bg-yellow-500 dark:hover:bg-yellow-400 focus:outline-none
									dark:focus:ring-yellow-300">
										<svg class="text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
											<path fill-rule="evenodd" d="M14 4.182A4.136 4.136 0 0 1 16.9 3c1.087 0 2.13.425 2.899 1.182A4.01 4.01 0 0 1 21 7.037c0 1.068-.43 2.092-1.194 2.849L18.5 11.214l-5.8-5.71 1.287-1.31.012-.012Zm-2.717 2.763L6.186 12.13l2.175 2.141 5.063-5.218-2.141-2.108Zm-6.25 6.886-1.98 5.849a.992.992 0 0 0 .245 1.026 1.03 1.03 0 0 0 1.043.242L10.282 19l-5.25-5.168Zm6.954 4.01 5.096-5.186-2.218-2.183-5.063 5.218 2.185 2.15Z" clip-rule="evenodd"/>
										</svg>
								</button>
								<button type="button" class="text-white bg-red-700
									hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm
									px-2 py-1 me-2 my-2 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none
									dark:focus:ring-red-800" data-bs-toggle="modal"
								   data-modal-target="delete-kamenews-modal" data-modal-toggle="delete-kamenews-modal" onclick="getDeleteUserInfos('{{ k.getId() }}')">
										<svg class="text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
											<path fill-rule="evenodd" d="M8.586 2.586A2 2 0 0 1 10 2h4a2 2 0 0 1 2 2v2h3a1 1 0 1 1 0 2v12a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V8a1 1 0 0 1 0-2h3V4a2 2 0 0 1 .586-1.414ZM10 6h4V4h-4v2Zm1 4a1 1 0 1 0-2 0v8a1 1 0 1 0 2 0v-8Zm4 0a1 1 0 1 0-2 0v8a1 1 0 1 0 2 0v-8Z" clip-rule="evenodd"/>
										</svg>
								</button>
							</td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</section>

{% endblock %}

{% block script %}
	<script src="/public/js/fetchURLFor.js"></script>
	<script src="/public/js/kamenews.js"></script>
	<script>
		function getDeleteUserInfos(id){
			document.getElementById('kamenewsId').value = id;
		}

		window.addEventListener('load', () => {
			const btns = document.querySelectorAll('.read-kamenews');
			btns.forEach(btn => {
				btn.addEventListener('click', async () => {
					await readKamenews('{{ read_kamenews_url }}', btn.id)
				})
			})

			const editBtns = document.querySelectorAll('.edit-kamenews');
			editBtns.forEach(btn => {
				btn.addEventListener('click', async () => {
					let id = btn.id.split('-')[0]
					await editKamenews('{{ display_edit_kamenews_url }}', id)
				})
			})
		})
	</script>
{% endblock %}