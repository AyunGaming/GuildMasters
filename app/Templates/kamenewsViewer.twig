{% extends "base.twig" %}

{% block title %} {{ kamenews.getTitle() }} {% endblock %}

{% block body %}
	{{ parent() }}

	{% if kamenews is not null %}
		<section class="px-8 mx-auto max-w-screen-xl bg-white dark:bg-gray-900 mt-3 mb-8">
			<div class="flex justify-center">
				<img alt="Illustration d'un journal" draggable="false" src="/public/images/kamenews/kamenewspaper.png">
			</div>

			<div class="my-8 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-8 md:p-12 mb-8">
				<div class="grid lg:grid-cols-3 sm:grid-cols-2">
					<div class="text-3xl text-gray-900 font-bold dark:text-white col-span-2">
						Kamenews n°{{ kamenews.getId() }} - {{ kamenews.getTitle() }}
					</div>

					<div class="mt-3 text-sm text-gray-900 font-bold italic dark:text-white justify-end">
						<p class="text-end text-gray-300">Publié par {{ kamenews.getWriter().getLogin() }} le {{ kamenews.getDate()|date("d/m/Y") }}</p>
					</div>
				</div>
				<hr class="mt-2 -mx-10 overflow-hidden">
				<div class="mt-4 ms-2 mb-3">
					<div class="text-gray-900 dark:text-white text-justify mt-3 ms-2 kamenews-container">
							{{ kamenews.content() | raw }}
					</div>
				</div>
			</div>
		</section>
	{% endif %}
{% endblock %}
