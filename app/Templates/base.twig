{% import "./elements/alerts/alert.twig" as alert %}
<!doctype html>
<html lang="fr">
<head>
	<meta charset="UTF-8">
	<meta name="viewport"
		  content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">

	<!-- JQuery -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

	<!-- Fonts -->
	<link rel="preconnect" href="https://fonts.gstatic.com">

	<!--Flowbite-->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet"/>

	<!-- Styles -->
	<link rel="stylesheet" href="../../public/css/base.css">
	<link rel="stylesheet" href="../../public/css/output.css">

	<script>
		// On page load or when changing themes, best to add inline in `head` to avoid FOUC
		if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
			document.documentElement.classList.add('dark');
		} else {
			document.documentElement.classList.remove('dark')
		}
	</script>

	<link rel="icon" type="image/vnd.icon" href=" /public/images/division_ico.ico">
	<title>{% block title %}{% endblock %}</title>

	{% block styles %} {% endblock %}
	{% block script %} {% endblock %}
</head>

<header class="mx-auto">
	<nav class="bg-gray-300 dark:bg-dark border-b-2 border-gray-400 dark:border-none">
		<div class=" flex flex-wrap items-center justify-between p-4">
			<a href="{{ url_for('home') }}" class="flex items-center space-x-3 rtl:space-x-reverse">
				<img src="/public/images/DivisionZ.png" class="h-16" alt="Division Z Logo" draggable="false"/>
				<span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white/[0.75]">GuildMasters</span>
			</a>
			<div class="flex items-center md:order-2 space-x-3 md:l:xl:space-x-0 rtl:space-x-reverse">
				<button type="button"
						class="flex text-sm bg-gray-800 rounded-full md:me-0 focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600"
						id="user-menu-button" aria-expanded="false" data-dropdown-toggle="user-dropdown"
						data-dropdown-placement="bottom">
					<span class="sr-only">Open user menu</span>
					{% if user is null %}
						<img class="w-12 h-12 rounded-full" src="/public/images/members/default.png" alt="user photo"
							 draggable="false">
					{% else %}
						{% if user.getImage() is null %}
							<img class="w-12 h-12 rounded-full" src="/public/images/members/default.png"
								 alt="user photo" draggable="false">
						{% else %}
							<img class="w-12 h-12 rounded-full" src="/public/images/members/{{ user.getImage() }}"
								 alt="user photo" draggable="false">
						{% endif %}
					{% endif %}
				</button>
				<!-- Dropdown menu -->
				<div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded-lg shadow dark:bg-gray-700 dark:divide-gray-600"
					 id="user-dropdown">
					{% if user is not null %}
					<div class="px-4 py-3">
						<span class="block text-sm text-gray-900 dark:text-white">{{ user.getLogin() }}</span>
						<span class="block text-sm  text-gray-500 truncate dark:text-gray-400">{{ user.getEmail }}</span>
					</div>
					<ul class="py-2" aria-labelledby="user-menu-button">
						{% if user.getRole() is constant('division\\Models\\Enums\\Role::ADMIN') %}
							<li>
								<a href="{{ url_for('character-list', {'page':1}) }}"
								   class="block px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">Gestion
									personnages</a>
							</li>
							<li>
								<a href="{{ url_for('admin-kamenews') }}"
								   class="block px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">Gestion
									kamenews</a>
							</li>
						{% endif %}
						<li>
							<a href="{{ url_for('sign-out') }}"
							   class="block px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">Déconnexion</a>
							{% else %}
								<a href="{{ url_for('sign-in') }}"
								   class="block px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">Connexion</a>
							{% endif %}
						</li>
					</ul>
				</div>
				<button data-collapse-toggle="navbar-user" type="button"
						class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
						aria-controls="navbar-user" aria-expanded="false">
					<span class="sr-only">Open main menu</span>
					<svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
						 viewBox="0 0 17 14">
						<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
							  d="M1 1h15M1 7h15M1 13h15"></path>
					</svg>
				</button>
			</div>
			<div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-user">
				<ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border bg-gray-300 border-gray-100 rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 dark:bg-dark md:dark:bg-dark dark:border-gray-700">
					<li>
						<a href="{{ url_for('home') }}"
						   class="block py-2 px-3 dark:text-white/[0.55] rounded md:bg-transparent md:p-0 md:dark:hover:text-white/[0.75] dark:hover:bg-white/[0.75] dark:hover:text-white/[0.55] md:dark:hover:bg-transparent "
						   aria-current="page">Accueil</a>
					</li>
					<li>
						<a href="{{ url_for('kamenews') }}"
						   class="block py-2 px-3 dark:text-white/[0.55] rounded hover:bg-gray-100 md:hover:bg-transparent dark:md:hover:text-white/[0.75] md:p-0 md:hover:text-black/[0.75] dark:hover:bg-gray-700 dark:hover:text-white/[0.55] md:dark:hover:bg-transparent dark:border-gray-700">Kaménews</a>
					</li>
					<li>
						<a href="#"
						   class="block py-2 px-3 dark:text-white/[0.55] rounded hover:bg-gray-100 md:hover:bg-transparent dark:md:hover:text-white/[0.75] md:p-0 md:hover:text-black/[0.75] dark:hover:bg-gray-700 dark:hover:text-white/[0.55] md:dark:hover:bg-transparent dark:border-gray-700">Tournoi</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
</header>


<body class="mx-auto bg-slate-50 dark:bg-gray-900">
{% block body %}
	{% if alerts is defined %}
		{% for flash in alerts %}
			<div class="2xl:xl:md:sm:container mx-auto mt-10 space-y-5">
				{{ alert.show(flash) }}
			</div>
		{% endfor %}
	{% endif %}
{% endblock %}
</body>


